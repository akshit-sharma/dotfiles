# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Press $mod+o followed by f, Escape or Return to launch firefox,
# or return to the default mode
set $mode_launcher Launch: [f]irefox [s]potify [k]onsole [u]xterm [d]olphin [o]kular [z]athura
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
  bindsym f exec firefox, mode "default"
  bindsym Shift+f exec firefox --private-window, mode "default"
  bindsym s exec spotify, mode "default"
  bindsym k exec konsole, mode "default"
  bindsym u exec uxterm, mode "default"
  bindsym d exec dolphin, mode "default"
  bindsym o exec okular, mode "default"
  bindsym z exec zathura, mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

# Press $mod+y
set $mode_system System [l]ock log[o]ut [s]uspend [r]eboot [shift]+[s]hutdown
bindsym $mod+y mode "$mode_system"
mode "$mode_system" {
  bindsym l exec --no-startup-id $config_dir/i3exit lock, mode "default"
  bindsym o exec --no-startup-id $config_dir/i3exit logout, mode "default"
  bindsym s exec --no-startup-id $config_dir/i3exit suspend, mode "default"
  bindsym r exec --no-startup-id $config_dir/i3exit reboot, mode "default"
  bindsym Shift+s exec --no-startup-id $config_dir/i3exit shutdown, "default"

  # back to normal: Enter or Escape
  bindsym Escape mode "default"
  bindsym Return mode "default"
}

focus_follows_mouse no 
mouse_warping none # does not move mouse if focused across screens
workspace_auto_back_and_forth yes

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master 4%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 4%- unmute
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master 1%+ unmute
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 1%- unmute
bindsym XF86AudioMute exec amixer -q sset -D pulse Master toggle
